<script>
/* === LOGIC === */
const password = "ayat";

// Compliments Data (IIUI & Funny)
const compliments = [
    {e:"üêí", t:"IIUI ke monkeys se bach ke rehna, kahin wo tumhe lost sister samajh ke saath na le jayen!"},
    {e:"üç≤", t:"Mess ka khana kha kar tum strong ho gayi ho, Papers tumhara kuch nahi bigaar sakte!"},
    {e:"ü•∂", t:"Islamabad ki sardi aur tumhara gussa... dono bardasht se bahar hain."},
    {e:"üìö", t:"3 Semesters guzar gaye, par tumhari 'Kal Se Parhungi' wali acting abhi tak Oscar level hai."},
    {e:"üëÄ", t:"Hostel ke mirror mein kam dekha karo, kahin wo dar ke toot na jaye (Just kidding, beautiful)."},
    {e:"‚òï", t:"Tum chaye ki tarah ho, kabhi meethi, kabhi tez, par adat ho gayi hai tumhari."},
    {e:"üöå", t:"Hostel se Dept tak paidal chalna band karo, 2026 mein driver rakh lena (Mujhe)."},
    {e:"üßü‚Äç‚ôÄÔ∏è", t:"Exam night pe tum Zombie lagti ho, par main phir bhi darta nahi hoon."},
    {e:"üíñ", t:"Log new year wish karte hain, main tumhare sath puri life wish karta hoon."}
];

function enterWorld() {
    if(document.getElementById('password').value.toLowerCase() === password) {
        document.getElementById('login-screen').style.opacity = 0;
        setTimeout(() => {
            document.getElementById('login-screen').classList.remove('active');
            document.getElementById('countdown-screen').classList.add('active');
            startCountdown();
        }, 800);
    } else {
        alert("Wrong Password! Are you an imposter? ü§®");
    }
}

function startCountdown() {
    let count = 9;
    const timer = document.getElementById('timer');
    const txt = document.getElementById('loading-text');
    
    const interval = setInterval(() => {
        count--;
        timer.innerText = count;
        if(count == 6) txt.innerText = "Generating Cuteness...";
        if(count == 3) txt.innerText = "Warming up the Engine...";
        if(count < 0) {
            clearInterval(interval);
            launchWorld();
        }
    }, 1000);
}

function launchWorld() {
    document.getElementById('countdown-screen').classList.remove('active');
    document.getElementById('main-world').style.display = 'block';
    document.getElementById('escape-btn').style.display = 'block';
    startFireworks();
    loadEmojis();
}

// BMW Reveal
function revealCar() {
    const box = document.getElementById('bmw-box');
    box.classList.add('lights-on');
    document.getElementById('plate').style.transform = "scale(1)";
    
    // Simulate Sound
    alert("*VROOOM!* üèéÔ∏èüí® (Engine Start Sound)\n\nAyat: Wow Mazhar ye amazing hai!");
}

// Tea Maker
function makeTea() {
    const cupBox = document.getElementById('cup-box');
    const steams = document.querySelectorAll('.steam');
    cupBox.style.opacity = 1;
    
    steams.forEach(s => s.style.animation = "float 2s infinite");
    
    const sugar = document.getElementById('sugar').value;
    let msg = "";
    if(sugar > 80) msg = "Uff! Itni meethi? Pehle hi sweet ho!";
    else if(sugar < 20) msg = "Kadwi Chaye? Gussa kam karo!";
    else msg = "Perfect! Garam, just like your mood.";
    
    document.getElementById('tea-msg').innerText = msg;
}

// Emojis
function loadEmojis() {
    const grid = document.getElementById('emoji-grid');
    compliments.forEach(c => {
        let b = document.createElement('div');
        b.className = 'emoji-bubble';
        b.innerText = c.e;
        b.onclick = () => showModal(c.e, c.t);
        grid.appendChild(b);
    });
}

// Escape Button (Long Drive)
function openEscape() {
    const modal = document.getElementById('modal');
    const title = document.getElementById('modal-title');
    const text = document.getElementById('modal-text');
    const visual = document.getElementById('long-drive-visual');
    
    modal.style.display = 'flex';
    title.innerText = "Margalla Hills Drive üèîÔ∏è";
    visual.style.display = 'block';
    text.innerHTML = "Aankhein band karo Ayat... <br>Imagine hum M5 mein hain. Papers ki tension hawa mein urr gayi. <br>Sirf Sukoon hai. ‚ù§Ô∏è";
}

// General Modal
function showModal(emoji, text) {
    document.getElementById('modal').style.display = 'flex';
    document.getElementById('long-drive-visual').style.display = 'none';
    document.getElementById('modal-title').innerText = emoji;
    document.getElementById('modal-text').innerText = text;
}

function closeModal() { document.getElementById('modal').style.display = 'none'; }

// Prank Button
function moveButton() {
    const btn = document.getElementById('no-btn');
    btn.style.position = 'absolute';
    btn.style.left = Math.random() * 200 + 'px';
    btn.style.top = Math.random() * 100 + 'px';
}

/* FIREWORKS ENGINE */
function startFireworks() {
    const c = document.getElementById("fireworks");
    const ctx = c.getContext("2d");
    c.width = window.innerWidth; c.height = window.innerHeight;
    let particles = [];
    
    function animate() {
        requestAnimationFrame(animate);
        ctx.fillStyle = "rgba(0,0,0,0.1)"; ctx.fillRect(0,0,c.width,c.height);
        
        if(Math.random() < 0.03) {
            const x = Math.random() * c.width;
            const y = Math.random() * c.height / 2;
            const color = `hsl(${Math.random()*360}, 50%, 50%)`;
            for(let i=0; i<30; i++) {
                particles.push({x:x, y:y, vx:(Math.random()-.5)*10, vy:(Math.random()-.5)*10, life:1, color:color});
            }
        }
        
        particles.forEach((p,i) => {
            p.x += p.vx; p.y += p.vy; p.vy += 0.1; p.life -= 0.02;
            ctx.globalAlpha = p.life; ctx.fillStyle = p.color;
            ctx.beginPath(); ctx.arc(p.x, p.y, 2, 0, Math.PI*2); ctx.fill();
            if(p.life <= 0) particles.splice(i,1);
        });
    }
    animate();
}
</script>
